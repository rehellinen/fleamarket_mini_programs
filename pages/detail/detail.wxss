/* pages/detail/detail.wxss */
.container{
  display: flex;
  flex-direction: column;
  background-color: #F9F9F9
}

.detail{
  background-color: white;
  padding-bottom: 15px;
}

.cart-container{
  position: fixed;
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  right: 20rpx;
  background-color: white;
  border-radius:50px;
  opacity: 0.95;
}

.cart image{
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}

.head-image{
  width: 750rpx;
  height: 400rpx;
}

.info{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}

.info-up{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.name-container{
  width: 60%;
}

.name{
  color: #62502f;
  font-size: 20px;
}

.subname{
  color: #d99009;
  font-size: 15px;
}

.picker{
  width: 40%;
  line-height: 50px;
  display: flex;
  justify-content: flex-end;
}

.picker text{
  color: #d99009;
  font-size: 15px;
}

.picker-arrow{
  width: 15px;
  height: 15px;
  margin-top: 18px;
  margin-left: 10px;
}

.selected-count{
  margin-left: 20rpx;
}

.hr{
  width: 685rpx;
  margin-left: -3px;
  height: 1px;
  background-color: #e3e3e3;
  margin-top: 8px;
  margin-bottom: 13px;
}

.quantity-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 30px;
  line-height: 30px;
  justify-content: space-between;
}

.price-quantity-container{
  width: 50%;
  display: flex;
  justify-content: flex-start;
}

.price{
  font-size: 20px;
  color: #d99009;
}

.quantity{
  margin-top: 6px;
  margin-left: 16rpx;
  font-size: 14px;
  color: #9c9c9c;
}

.cart-text-container{
  width: 50%;
  display: flex;
  justify-content: flex-end;
}

.cart-text{
  font-size: 16px;
  color: #d99009;
}

.down-cart{
  width: 30px;
  height: 30px;
  margin-left: 20rpx;
}

.tab-container{
  margin-top: 30rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  background-color: white;
}

.tabs-item{
  width: 50%;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #D0D0D7;
  align-items: center;
  border-bottom: 1rpx solid #D0D0D7;
}

.tabs-item.selected{
  color: #d99009;
  border-bottom: 2px solid #d99009;
}

.goods-info{
  background-color: white;
  width: 100%;
}

.seller-info{
  background-color: white;
  width: 100%;
}