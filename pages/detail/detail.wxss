/* pages/detail/detail.wxss */
.container{
  background-color: #F9F9F9
}

.cart-container{
  position: fixed;
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  right: 20rpx;
  background-color: white;
  border-radius:50px;
  opacity: 0.95;
}

.cart-container.animate{
  animation: aCartScale 200ms cubic-bezier(.17,.67,.83,.67);
  animation-fill-mode: backwards;
}

@keyframes aCartScale{
  0%{
    -webkit-transform: scale(1.1);
  }
  100% {
    -webkit-transform: scale(1);
  }
}

.cart-icon{
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}

.cart-count-container{
  width: 20px;
  height: 20px;
  background-color: #a9936e;
  border-radius:50px;
  text-align: center;
  line-height: 17px;
  position: absolute;
  top: -5px;
  right: -5px;
  color: white;
}

.cart-selected-count{
  font-size: 13px;  
}

.detail{
  background-color: white;
  padding-bottom: 15px;
}

.head-image{
  width: 750rpx;
  height: 400rpx;
}

.info{
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}

.info-up{
  display: flex;
  justify-content: space-between;
}

.name-container{
  display: flex;
  flex-direction: column;
}

.name{
  color: #62502f;
  font-size: 20px;
}

.subname{
  color: #d99009;
  font-size: 15px;
  margin-top: 8rpx;
}

.picker{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.picker.disabled{
  color: #b3b2b2;
  font-size: 15px;
}

.picker.normal{
  color: #d99009;
  font-size: 15px;
}

.selected-count{
  margin-left: 20rpx;  
}

.picker-arrow{
  width: 15px;
  height: 15px;
  margin-left: 10px;
  vertical-align: middle;
}

.hr{
  width: 101%;
  margin-left: -3px;
  margin-top: 12px;
  margin-bottom: 8px; 
}

.quantity-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.price-quantity-container{
  display: flex;
  align-items: center;
}

.price{
  font-size: 20px;
  color: #d99009;
}

.quantity{
  margin-top: 6px;
  margin-left: 16rpx;
  font-size: 14px;
  color: #9c9c9c;
}

.cart-text-container{
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.cart-text-container.disabled{
  font-size: 16px;
  color: #b3b2b2;
}

.cart-text-container.normal text{
  font-size: 16px;
  color: #d99009;
}

.down-cart{
  width: 30px;
  height: 30px;
  margin-left: 20rpx;
}

.small-top-img{
  height: 160rpx;
  width: 160rpx;
  right:6rpx;
  position: absolute;
  opacity: 0;
  border-radius: 50px;
}

.small-top-img.animate{
  opacity: 1;
  transition:all 1000ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.goods-info{
  background-color: white;
  width: 100%;
}

.seller-info{
  background-color: white;
  width: 100%;
}