.order-container {
  background-color: #f4f4f4;
  overflow-x: hidden;
  font-size: 28rpx;
}

.order-container>view {
  background-color: #fff;
}

.order-accounts {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  height: 92rpx;
  width: 100%;
  display: flex;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.order-accounts>view {
  display: flex;
  align-items: center;
}

.total-account {
  flex: 1;
  color: #93312e;
  padding-left: 25rpx;
}

.pay {
  flex-basis: 240rpx;
  background-color: #ab956d;
  color: #fff;
  justify-content: center;
}

.pay:active {
  background: #84704d;
}

.pay.disabled {
  background: rgba(171, 149, 109, 0.6);
  pointer-events: auto;
}