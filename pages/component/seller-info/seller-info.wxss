.buyer-basic-info {
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  width: 750rpx;
  font-size: 28rpx;
}

.buyer-info-container{
  flex: 1;
  padding-left: 30rpx;
}

.buyer-info-container view:first-child{
  margin-top: 20rpx;
}

.icon-info{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.icon{
  width: 40rpx;
  height: 40rpx;
  flex-basis: 40rpx;
}

.info{
  margin-left: 20rpx;
  color: #a9936c;
}

.avatar-container{
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.avatar-container text{
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
}