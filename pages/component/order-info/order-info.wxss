.order-basic-info {
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  padding: 30rpx 0;
  width: 750rpx;
  font-size: 28rpx;
}

.info-container {
  flex: 1;
  margin-left: 30rpx;
}

.info-container view:first-child {
  margin-bottom: 15rpx;
}

.key {
  color: #999;
}

.val {
  margin-left: 10rpx;
  color: #333;
}

.order-no-txt {
  letter-spacing: 2rpx;
  color: #999;
}

/*订单三种状态*/
.order-status {
  display: flex;
  flex-basis: 110rpx;
  align-items: center;
  justify-content: flex-end;
  margin-right: 30rpx;
}

.order-status-txt {
  font-size: 24rpx;
}

.order-status-txt.unpay {
  color: #b42f2d;
}

.order-status-txt.payed {
  color: #ab956d;
}

.order-status-txt.done {
  color: #57ab53;
}