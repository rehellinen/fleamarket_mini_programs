.find-detail-container
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
  background-color: white;
}

.find-detail
{
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 365rpx;  
  margin-left: 17rpx;
  margin-top: 30rpx;
  box-shadow:0 0 6px #ebebeb;
  border-radius: 8px
}

.find-detail-image
{
  width: 350rpx;
  height: 250rpx;
  border-radius: 8px 8px 0 0;
}

.find-detail-text
{
  color: #757575;
  font-size: 14px;
  margin-top: 9px;
  margin-left: 25rpx;
}

.price
{
  color: #fa3e3d;
  font-size: 16px;
  margin: 0 0 0 25rpx;
  width: 50%;
}