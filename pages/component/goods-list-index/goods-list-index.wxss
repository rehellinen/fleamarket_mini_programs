.find-detail-container
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
  background-color: white;
  padding-bottom: 5rpx;
}

.find-detail
{
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 365rpx;  
  margin-left: 17rpx;
  margin-top: 25rpx;
  box-shadow:0 0 6px #ebebeb;
  border-radius: 8px
}

.find-detail-image
{
  width: 350rpx;
  height: 250rpx;
  border-radius: 8px 8px 0 0;
}

.text-container{
  margin-left: 25rpx;
  color: #757575;
  font-size: 14px;
  margin-top: 8rpx;
}

.price
{
  color: #fa3e3d;
  font-size: 16px;
  margin: 0 0 0 25rpx;
  width: 50%;
}

.old-goods-image{
  width: 50rpx;
  height: 20rpx;
}

.two-handed{
  font-size: 10px;
  color: #757575;
  margin-right: 8rpx;
}