/* pages/component/goods-list/goods-list.wxss */
.goods-list-container{
  display: flex;
  flex-direction: column;
}

.choose-bar{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  height: 70rpx;
  align-items:center;
  color: #5c5c5c;
}

.single-choose{
  font-size: 14px;
}

.goods-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-between;
  background-color: #F9F9F9;
  margin-top:5rpx;
}

.single-goods{
  width: 49%;
  background: white;
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: column;
}

.goods-image{
  width: 370rpx;
  height: 370rpx;
}

.goods-text-container{
  margin: 8rpx 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
}

.name{
  font-size: 32rpx;
}

.price{
  font-size: 16px;
  color: #d99009;
}

.sold{
  color: #cbcfd2;
  font-size: 13px;
  margin-left: 20rpx;
}