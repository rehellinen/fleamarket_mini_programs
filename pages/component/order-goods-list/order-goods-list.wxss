.order-main {
  padding-bottom: 92rpx;
  width: 750rpx;
  background-color: white;
  font-size: 28rpx;
}

.product-item {
  display: flex;
  justify-content: space-around;
  color: #6d6d6d;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 20rpx;
  align-items: center;
}

.product-item .item-left {
  flex-basis: 180rpx;
  height: 180rpx;
  background-color: #f5f6f5;
  border-radius: 4rpx;
}

.product-item .item-left image {
  height: 100%;
  width: 100%;
}

.item-middle-right{
  display: flex;
  flex-basis: 430rpx;
  flex-direction: column;
}

.item-up{
  display: flex;
  flex-direction: row;
}

.product-item .item-middle {
  display: flex;
  flex-direction: column;
  flex-basis: 350rpx;
}

.product-item .item-middle .price {
  margin-top: 15rpx;
}

.product-item .item-middle .name {
  margin-left: 6rpx;
}

.product-item .item-right {
  flex-basis: 70rpx;
  justify-content: center;
  margin-top: 15rpx;
  margin-left: 10rpx;
}

.section {
  border-bottom: 1rpx solid #e9e9e9;
  width: 100%; 
  display: flex;
  align-items: center;
  height: 70rpx;
  margin-top: 15rpx;
}

.section input {
  font-size: 28rpx;
  color: #7c7c7c;
  padding: 20rpx 0;
}