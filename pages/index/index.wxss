/* theme */
.theme{
  display: flex;
  flex-direction: column;
  color: #6D6D6D;
}

.theme-text{
  text-align: center;
  margin-bottom: 5px;
  font-size: 35rpx;  
}

.theme-photo-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-around;
}

.theme-photo-container image{
  width: 370rpx;
  height: 183rpx;
  margin-top: 8rpx;
}
/* theme */
.find-image-container{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 140rpx;
}

.find-image
{
  width: 300rpx;
  height: 63rpx;
}

.find-detail-container
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
}

.find-detail
{
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 365rpx;  
  margin-left: 17rpx;
  margin-bottom: 30rpx;
  box-shadow:0 0 6px #ebebeb;
  border-radius: 8px
}

.find-detail-image
{
  width: 350rpx;
  height: 250rpx;
  border-radius: 8px 8px 0 0;
}

.find-detail-text
{
  color: #757575;
  font-size: 14px;
  margin-top: 9px;
  margin-left: 25rpx;
}

.price
{
  color: #fa3e3d;
  font-size: 16px;
  margin: 6rpx 0 0 25rpx;
  width: 50%;
}