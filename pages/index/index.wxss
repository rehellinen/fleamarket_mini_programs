.index-container{
  background-color: #f9f9f9;
}

.search-container{
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  top: 30rpx;
  right: 20rpx;
  background-color: white; 
  border-radius:50px;
  opacity: 0.9; 
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.icon{
  width: 40rpx;
  height: 40rpx;
}

/* banner */
.banner{
  width: 750rpx;
  height: 415rpx;  
}

.banner image{
  width: 750rpx;
  height: 415rpx;  
}
/* banner */


/* theme */
.theme{
  display: flex;
  flex-direction: column;
  color: #6D6D6D;
  background-color: white;
}

.theme-text{
  text-align: center;
  margin-bottom: 5px;
  font-size: 35rpx;  
}

.theme-photo-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.theme-photo-container image{
  width: 48.5vw;
  height: 183rpx;
  margin-top: 10rpx;
  margin-left: 1vw;
}
/* theme */
.find-image-container{
  padding: 40rpx 0 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 63rpx;
  background-color: white;
  width: 750rpx;
}

.find-image
{
  width: 300rpx;
  height: 63rpx;
}

.margin-top-image
{
  margin-top: 2rpx;
}

/* 查看更多样式 */
.more-container {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #999;
  height: 80rpx;
  padding-right: 2%;
  background-color: white;
}

.more-container text {
  font-size: 28rpx;
}

.more-container image {
  transform: rotate(270deg);
  height: 40rpx;
  width: 40rpx;
  margin-top: 2rpx;
}