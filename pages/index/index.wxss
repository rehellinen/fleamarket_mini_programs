/* theme */
.theme{
  display: flex;
  flex-direction: column;
  color: #6D6D6D;
}

.theme-text{
  text-align: center;
  margin-bottom: 5px;
  font-size: 14px;  
}

.theme-photo-container{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-around;
}

.theme-photo-container image{
  width: 365rpx;
  height: 180rpx;
  margin-top: 10rpx;
}
/* theme */


.find-image
{
  width: 300rpx;
  height: 65rpx;
  margin: 50rpx 0 40rpx 225rpx;
}

.find-detail-container
{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 750rpx;
}

.find-detail
{
  display: flex;
  flex-direction: column;
  width: 350rpx;
  height: 380rpx;  
  margin-left: 17rpx;
  margin-bottom: 35rpx;
  box-shadow:0 0 5px #ebebeb;
  border-radius: 8px
}

.find-detail-image
{
  width: 350rpx;
  height: 250rpx;
}

.find-detail-text
{
  color: #757575;
  font-size: 14px;
  margin-top: 9px;
  margin-left: 15rpx;
}

.price-quantity
{
  display: flex;
  flex-direction: row;
  height: 30px;
  margin-bottom: 3px;
  margin-top: 3px;
}

.price
{
  color: #fa3e3d;
  font-size: 20px;
  margin-left: 15rpx;
  width: 50%;
}