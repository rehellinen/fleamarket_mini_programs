.pay-result-container {
  min-height: 100vh;
  align-items: center;
  padding-top: 80rpx;
  background-color: rgb(248, 246, 247);
}

.pay-result {
  margin: 60rpx 0;
  text-align: center;
}

.pay-result image {
  width: 160rpx;
  height: 160rpx;
}

.pay-fail-title {
  font-size: 32rpx;
  color: #444242;
  margin-top: 20rpx;
}

.pay-fail-text {
  font-size: 30rpx;
  color: #985752;
  margin-top: 20rpx;
}

.pay-result button {
  margin: 100rpx 20rpx;
  width: 380rpx;
  border: 1rpx solid #8d8d8d;
  border-radius: 13px;
}
