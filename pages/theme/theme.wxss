.theme-container {
  display: flex;
  min-height: 100vh;
}

.theme-left {
  border-right: 1rpx solid #d8d8d8;
  display: flex;
  flex-direction: column;
  flex: 0 0 150rpx;
}

.category {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.category.selected {
  color: #a9936e;
  border-left: 3px solid #a9936e;
}

.theme-right {
  display: flex;
  flex-direction: column;
}

.category-image {
  width: 550rpx;
  height: 300rpx;
  margin-left: 25rpx;
  margin-top: 25rpx;
}

.text-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 80rpx;
}

.text-container text::before, .text-container text::after {
  content: '';
  display: inline-block;
  position: relative;
  bottom: 8rpx;
  width: 70rpx;
  height: 2rpx;
  margin: 0 25rpx;
  background-color: #979797;
}

.goods-container {
  width: 600rpx;
  display: flex;
  flex-wrap: wrap;
  margin-top: 15rpx;
}

.single-goods {
  width: 30%;
  margin-left: 2.5%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 30rpx;
}

.goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 120rpx;
}

.goods-text {  
  font-size: 28rpx;  
  margin-top: 10rpx;
}

/* 动画效果 */
@keyframes action_translateY{  
    0%{transform: translateY(-1334rpx);opacity: 0;}  
    100%{ transform: translateY(0px);opacity: 1;}  
}  

@keyframes action_translateYOut{  
    0%{transform: translateY(0px);opacity: 1;}  
    100%{ transform: translateY(1334rpx);opacity: 0;}  
} 

.theme-right.animateIn{
  animation: action_translateY 500ms
}

.theme-right.animateOut{
  animation: action_translateYOut 450ms
}