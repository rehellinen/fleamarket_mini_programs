.theme-container {
  display: flex;
  overflow:hidden;
  height:100vh
}

.theme-left {
  border-right: 1rpx solid #d8d8d8;
  display: flex;
  flex-direction: column;
  flex: 0 0 150rpx;
}

.category {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.category.selected {
  color: #a9936e;
  border-left: 3px solid #a9936e;
}

.theme-right {
  display: flex;
  flex-direction: column;
  transition: all 500ms ease-in-out;
}

.single-goods-container{
  min-height: 100vh;
}

.category-image-container{
  width: 100%;
  height: 25vh;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.category-image {
  width: 550rpx;
  height: 280rpx;
}

.text-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  height: 6vh;
  color: #333333;
}

.text-container text::before, .text-container text::after {
  content: '';
  display: inline-block;
  position: relative;
  bottom: 8rpx;
  width: 70rpx;
  height: 2rpx;
  margin: 0 25rpx;
  background-color: #333333;
}

.small{
  font-size: 27rpx;
}

