<view class='loading-container' hidden="{{loadingHidden}}">
  <image src='/images/theme/loading.gif'></image>
</view>

<!-- 我的订单 -->
<view class='order-container' hidden="{{!loadingHidden}}">
  <view class='text-container'>
    <text>我 的 订 单</text>
  </view>
  <switch-tab tab="{{['全部', '待付款', '待发货', '待收货']}}" class="switch-tab">
    <view slot="全部">
      <order-list order="{{order}}" bind:loaded="isLoadAll"></order-list>
    </view>
    <view slot="待付款">
      <order-list order="{{unpaid}}"></order-list>
    </view>
    <view slot="待发货">
      <order-list order="{{paid}}"></order-list>
    </view>
    <view slot="待收货">
      <order-list order="{{delivered}}"></order-list>
    </view>
  </switch-tab>

</view>
<!-- 我的订单 -->